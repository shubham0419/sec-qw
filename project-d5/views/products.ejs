<%- include("partials/header") %>
<%- include("partials/navbar") %>

<div class="d-flex justify-content-evenly ms-5 me-5 flex-wrap">
<% allProduct.forEach(product => { %>
    <div class="card ms-3 me-3" style="width: 18rem;">
        <img src="<%= product.imageUrl %>" class="card-img-top" alt="...">
        <div class="card-body">
        <p class="card-text"><%= product.price %></p>
          <h5 class="card-title"><%= product.productName %></h5>
          <p class="card-text"><%= product.description %></p>
          <p class="card-text text-secondary"><%= product.createdAt %></p>
          <a href="/product/show/<%= product._id%>" class="btn btn-primary">show</a>
        </div>
      </div>
<% }); %> 
</div>

<%- include("partials/footer") %>